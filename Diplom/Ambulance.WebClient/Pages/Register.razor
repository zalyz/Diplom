@page "/register"

<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        <h4 class="card-header">Регистрация</h4>
        <div class="card-body">
            <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Введите почту</label>
                    <InputText @bind-Value="model.Email" class="form-control" />
                    <ValidationMessage For="@(() => model.Email)" />
                </div>
                <div class="form-group">
                    <label>Введите логин</label>
                    <InputText @bind-Value="model.Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Введите пароль</label>
                    <InputText @bind-Value="model.Password" type="password" class="form-control" />
                    <ValidationMessage For="@(() => model.Password)" />
                </div>
                <div class="form-group">
                    <label>Подтвердите пароль</label>
                    <InputText @bind-Value="model.ConfirmPassword" type="password" class="form-control" />
                    <ValidationMessage For="@(() => model.ConfirmPassword)" />
                </div>
                <button class="btn btn-primary mt-1">Зарегистрироваться</button>
                <NavLink href="login" class="btn btn-link">Отмена</NavLink>
            </EditForm>
        </div>
    </div>
</div>
